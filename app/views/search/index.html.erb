<h1 class="text-center"><%= pluralize(@posts.count, "Result") %></h1>
<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th><%= sort_link(@query, :user_name, "Users") %></th>
      <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
      <th><%= sort_link(@query, :body, "Blog Content") %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <% if post.user.avatar.present? %>
            <%= image_tag(post.user.avatar, style:"width:45px; height: 45px; border-radius:100%") if post.user.avatar.attached?%>
          <% else %>
            <%= image_tag("default_avatar1/default_avatar.png", style:"width:45px; height: 45px; border-radius:100%") %>
          <% end %>
          <div class="ms-3">
            <p class="fw-bold mb-1"><%= link_to post.user.name, post.user %></p>
          </div>
        </div>
      </td>
      <td>
        <p class="fw-normal mb-1"><%= link_to post.title, post %></p>
      </td>
      <td><%= post.body.truncate_words(20) %></td>
      <td>
        <button type="button" class="btn btn-link btn-sm btn-rounded">
          Edit
        </button>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
